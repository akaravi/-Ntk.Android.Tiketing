<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/RefreshMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bannerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.45"
                android:background="@drawable/main_btn_background"
                android:orientation="vertical"
                android:padding="2.8dp">

                <ss.com.bannerslider.views.BannerSlider
                    android:id="@+id/SliderActMain"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.99"
                    app:defaultIndicators="round_square"
                    app:indicatorSize="7dp"
                    app:interval="5000"
                    app:loopSlides="true" />
            </LinearLayout>

            <include
                layout="@layout/main_page_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55" />
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>