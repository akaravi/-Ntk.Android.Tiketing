<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerToolbarActMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" />

    <ss.com.bannerslider.views.BannerSlider
        android:id="@+id/SliderActMain"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:defaultIndicators="round_square"
        app:indicatorSize="7dp"
        android:layout_below="@id/RecyclerToolbarActMain"
        app:interval="5000"
        app:loopSlides="true" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/RefreshTicket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SliderActMain">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerActMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/FabActMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                app:backgroundTint="@color/colorAccent"
                app:srcCompat="@drawable/ic_plus" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>